<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.example.du.circleprogressbar.CircleProgressBar
        android:id="@+id/barStrokeText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:backColor="@color/gray"
        app:frontColor="@color/blue"
        app:mode="STROKE_TEXT"
        app:textColor="@color/red"
        app:textSize="18sp" />

    <com.example.du.circleprogressbar.CircleProgressBar
        android:id="@+id/barStroke"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        app:backColor="@color/gray"
        app:frontColor="@color/blue"
        app:mode="STROKE"
        app:textColor="@color/red"
        app:textSize="15sp" />

    <com.example.du.circleprogressbar.CircleProgressBar
        android:id="@+id/barFill"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        app:backColor="@color/gray_light"
        app:frontColor="@color/blue"
        app:mode="FILL"
        app:textColor="@color/red"
        app:textSize="15sp" />

</LinearLayout>
